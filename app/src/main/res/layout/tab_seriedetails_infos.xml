<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="japscan.gtheurillat.japscan.MainActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:text="NOM SERIE"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/imgFavoris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:srcCompat="@android:drawable/btn_star" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imgSerie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Auteur"
                android:textColor="#005c9c" />

            <TextView
                android:id="@+id/textDetailAuteur"
                android:gravity="left"
                android:padding="3dip"
                android:text="" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Sortie Initial"
                android:textColor="#005c9c" />

            <TextView
                android:id="@+id/textDetailDate"
                android:gravity="left"
                android:padding="3dip"
                android:text="" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Genre"
                android:textColor="#005c9c" />

            <TextView
                android:id="@+id/textDetailGenre"
                android:gravity="left"
                android:padding="3dip"
                android:text="" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Fansub"
                android:textColor="#005c9c" />

            <TextView
                android:id="@+id/textDetailFansub"
                android:gravity="left"
                android:padding="3dip"
                android:text="" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Status"
                android:textColor="#005c9c" />

            <TextView
                android:id="@+id/textDetailStatus"
                android:gravity="left"
                android:padding="3dip"
                android:text="" />
        </TableRow>
    </TableLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/textDetailSynopsis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#222222"
        android:scrollbars = "vertical"
        android:text="Synopsis ..."
        />

</LinearLayout>
